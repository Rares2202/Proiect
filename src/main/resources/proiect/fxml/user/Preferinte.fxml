<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.text.Text?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="600.0" prefWidth="1030.0"
styleClass="background">
    <children>
        <Button fx:id="inchide" layoutX="940.0"
                mnemonicParsing="false"  prefHeight="40.0" prefWidth="90.0" styleClass="exit" textFill="WHITE">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <graphic>
                <FontAwesomeIcon fill="black" glyphName="CLOSE" size="15">
                    <font>
                        <Font size="15.0" />
                    </font>
                </FontAwesomeIcon>
            </graphic>
        </Button>
        <Text layoutY="40.0" layoutX="355.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose which genres you prefer to read" >
            <font>
                <Font size="20.0" />
            </font>
        </Text>


        <GridPane layoutX="50"
                  layoutY="100" prefHeight="450.0" prefWidth="1030.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <CheckBox fx:id="actionCheckBox" mnemonicParsing="false" text="Action" GridPane.columnIndex="1" />
                <CheckBox fx:id="adventureCheckBox" mnemonicParsing="false" text="Adventure" />
                <CheckBox fx:id="biographyCheckBox" mnemonicParsing="false" text="Biography" GridPane.rowIndex="4" />
                <CheckBox fx:id="classicsCheckBox" mnemonicParsing="false" text="Classics" GridPane.columnIndex="2" />
                <CheckBox fx:id="comicBooksCheckBox" mnemonicParsing="false" text="Comic Books" GridPane.columnIndex="3" />
                <CheckBox fx:id="cookbooksCheckBox" mnemonicParsing="false" text="Cookbooks" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <CheckBox fx:id="dramaCheckBox" mnemonicParsing="false" text="Drama" GridPane.rowIndex="1" />
                <CheckBox fx:id="economyCheckBox" mnemonicParsing="false" text="Economy" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <CheckBox fx:id="fantasyCheckBox" mnemonicParsing="false" text="Fantasy" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <CheckBox fx:id="historicalCheckBox" mnemonicParsing="false" text="Historical" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <CheckBox fx:id="horrorCheckBox" mnemonicParsing="false" text="Horror" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                <CheckBox fx:id="mysteryCheckBox" mnemonicParsing="false" text="Mystery" GridPane.rowIndex="2" />
                <CheckBox fx:id="philosophyCheckBox" mnemonicParsing="false" text="Philosphy" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <CheckBox fx:id="poetryCheckBox" mnemonicParsing="false" text="Poetry" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <CheckBox fx:id="psychologyCheckBox" mnemonicParsing="false" text="Psychology" GridPane.rowIndex="3" />
                <CheckBox fx:id="religionCheckBox" mnemonicParsing="false" text="Religion" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <CheckBox fx:id="romanceCheckBox" mnemonicParsing="false" text="Romance" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <CheckBox fx:id="scienceCheckBox" mnemonicParsing="false" text="Science" GridPane.columnIndex="3" GridPane.rowIndex="4" />
                <CheckBox fx:id="scienceFictionCheckBox" mnemonicParsing="false" text="Science Fiction" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                <CheckBox fx:id="selfImprovementCheckBox" mnemonicParsing="false" text="Self Improvement" GridPane.columnIndex="3" GridPane.rowIndex="3" />


            </children>
        </GridPane>

        <Button fx:id="submit" layoutX="935.0" layoutY="550"
                 mnemonicParsing="false"  prefHeight="30.0" prefWidth="90.0" styleClass="exit" text="Submit">
            <font>
                <Font name="Arial" size="15.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>

        </Button>
    </children>

</Pane>
